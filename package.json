    "express-basic-auth": "^1.1.6",
    "express-fileupload": "^1.1.1-alpha.3",
    "express-multipart-file-parser": "^0.1.2",
    "firebase-admin": "^6.4.0",
    "firebase-functions": "^2.1.0",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "xlsx": "^0.14.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.13.0",
    "eslint-plugin-promise": "^4.0.1",
    "expect": "^24.1.0",
    "mocha": "^5.2.0",
    "supertest": "^3.3.0"

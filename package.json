{
  "name": "myportaladminapi",
  "version": "1.0.0",
  "description": "WebApi Support for myportal",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --timeout 30000 --exit api/**/test/*.js",
    "test-single": "cross-env NODE_ENV=test mocha --timeout 30000 --exit",
    "start": "node server.js",
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
